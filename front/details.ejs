<!DOCTYPE html>
<html lang="en">
<%- include('./components/head.ejs')%>
<body>
    <%- include('./components/navbar.ejs')%>

    <div class="details">
        <h2><%= blog.title %></h2>
        <div class="content">
            <p><%= blog.body %></p>
        </div>
        <a href="/blogs/<%= blog._id %>/edit" class="edit">Edit</a>
        <!-- <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="delete">Delete</button> -->
        <a class="delete" href="delete" data-doc="<%= blog._id %>">Delete</a>

    </div>
    <%- include('./components/foot.ejs')%>

    <script>
        const deleteBtn = document.querySelector('a.delete');

        deleteBtn.addEventListener('click', (e) => {
            const endpoint = `/blogs/${e.target.dataset.doc}`;
            fetch(endpoint, {
                method: 'DELETE'
            })
            .then((resp) => {
                resp.json()
            })
            .then((data) => {
                window.location.href = '/blogs'
            })
            .catch(err => console.log(err))
        })
    </script>
</body>
</html>