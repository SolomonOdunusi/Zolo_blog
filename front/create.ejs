<!DOCTYPE html>
<html lang="en">
    <%- include('./components/head.ejs')%>
<body>
    <%- include('./components/navbar.ejs')%>
    <div class="create">
        <h2>Add a New Blog</h2>
        <form action="/blogs" method="POST">
            <label>Blog Title: </label>
            <input type="text" required name="title"
                placeholder="Title"/>
            <label for="snippet">Blog Snippet: </label>
            <input type="text" name="snippet" id="snippet" required>

            <label>Blog: </label>
            <textarea required placeholder="Blog" name="body"></textarea>

            <label>Blog Author: </label>
            <input type="text" required placeholder="Author" name="author"
            />
            <button class="create_btn">Add Blog</button>
        </form>
        <%- include('./components/foot.ejs')%>
</body>
</html>